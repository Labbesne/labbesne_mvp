<p id="notice"><%= notice %></p>

<h1>Interactions</h1>

<table>
  <thead>
    <tr>
      <th>Spree product</th>
      <th>Spree user</th>
      <th>Expanded</th>
      <th>Swiped</th>
      <th>Like count</th>
      <th>Dislike count</th>
      <th>Bought</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interactions.each do |interaction| %>
      <tr>
        <td><%= interaction.spree_product_id %></td>
        <td><%= interaction.spree_user_id %></td>
        <td><%= interaction.expanded %></td>
        <td><%= interaction.swiped %></td>
        <td><%= interaction.like_count %></td>
        <td><%= interaction.dislike_count %></td>
        <td><%= interaction.bought %></td>
        <td><%= link_to 'Show', interaction %></td>
        <td><%= link_to 'Edit', edit_interaction_path(interaction) %></td>
        <td><%= link_to 'Destroy', interaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

