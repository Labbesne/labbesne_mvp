<p id="notice"><%= notice %></p>

<h1>Product Outfits</h1>

<table>
  <thead>
    <tr>
      <th>Spree product</th>
      <th>Outfit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_outfits.each do |product_outfit| %>
      <tr>
        <td><%= product_outfit.spree_product_id %></td>
        <td><%= product_outfit.outfit_id %></td>
        <td><%= link_to 'Show', product_outfit %></td>
        <td><%= link_to 'Edit', edit_product_outfit_path(product_outfit) %></td>
        <td><%= link_to 'Destroy', product_outfit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

