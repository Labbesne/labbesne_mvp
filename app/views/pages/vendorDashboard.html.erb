<ul>
<% @products.each do |p| %>
<li><%= p.name %></li>
<% end %>
</ul>
<%= simple_form_for @product, url: '/admin/products', method: :post, remote: true do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :shipping_category_id,as: :hidden, input_html: { value: @shipping } %>
  <%= f.input :spree_user_id,as: :hidden, input_html: { value: 1 } %>
  <%= f.button :submit %>
<% end %>
