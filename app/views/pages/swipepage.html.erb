<div id="swipe-card-container">
  <h4>swipe right if you like the item, and left if you don't</h4>
  <ul id="swipe-card-stack">
    <% @products.each_with_index do |p,i| %>
      <li class="swipe-card">
        <div class="swipe-card-base">
          <%= i %>
        </div>
        <div class="swipe-card-like hidden">
          <i class="fas fa-heart"></i>
        </div>
        <div class="swipe-card-dislike hidden">
          <i class="far fa-times-circle"></i>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="progress" style="height: 3px; width: 80%">
    <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
</div>

