<div class="container-profile-router">
  <h1>LABBESNE</h1>
  <h3>Fill out your profile to generate your outfits</h3>

  <div class="container-links">
    <%= link_to new_body_measurement_path do %>
      <div class="router-link-measurements">
        <i class="fas fa-ruler-combined"></i>
        <p>Measurements</p>
        <div class="progress progress-inner">
          <div class="progress-bar bg-success" role="progressbar" style="width: <%= "#{@measurements_progress}%" %>" aria-valuenow="<%= @measurements_progress %>" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    <% end %>
    <%= link_to new_lifestyle_path do %>
      <div class="router-link-lifestyle">
        <i class="fas fa-glass-cheers"></i>
        <p>Lifestyle</p>
        <div class="progress progress-inner">
          <div class="progress-bar bg-success" role="progressbar" style="width: 20%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    <% end %>
    <%= link_to swipe_path do %>
      <div class="router-link-preferences">
        <i class="fas fa-heart"></i>
        <p>Preferences</p>
        <div class="progress progress-inner">
          <div class="progress-bar bg-success" role="progressbar" style="width: 70%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
     <% end %>
  </div>
</div>
