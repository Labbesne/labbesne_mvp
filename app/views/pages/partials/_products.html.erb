<div class="products-container">
  <div class="products-container-sidebar">
    <div class="product-filters">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label>
      </div>
    </div>
  </div>
  <div class="products-section-swiper">
    <ul id="products-swipe-card-stack">
      <% @products.each_with_index do |p,i| %>
        <li class="swipe-card">
          <div class="swipe-card-base <%= p.gender %>">
            <%= image_tag p.images.first.url('large') %>
          </div>
          <div class="swipe-card-like hidden">
            <i class="fas fa-heart"></i>
          </div>
          <div class="swipe-card-dislike hidden">
            <i class="far fa-times-circle"></i>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="controls">
      <i class="fa fa-times-circle controls-dislike"></i>
      <i class="fa fa-times-circle controls-dislike"></i>
      <i class="fa fa-times-circle controls-dislike"></i>
      <i class="fa fa-times-circle controls-dislike"></i>
      <i class="fa fa-times-circle controls-dislike"></i>
    </div>
  </div>
</div>
