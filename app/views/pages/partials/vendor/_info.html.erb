<%= simple_form_for(@info, url: (@info.new_record? ? infos_path : edit_info_path), remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :profiles, selected: current_spree_user.profile, as: :hidden %>
    <% if @info.name.nil? %>
      <%= f.input :name %>
    <% else %>
      <%= f.input :name, input_html: {value: @info.name} %>
    <% end %>
    <%= f.input :dob, as: :hidden, input_html: {value: Time.now} %>
    <%= f.input :gender, as: :hidden, input_html: {value: "supplier"} %>
    <% if @info.phone.nil? %>
      <%= f.input :phone %>
    <% else %>
      <%= f.input :phone, input_html: {value: @info.phone} %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
