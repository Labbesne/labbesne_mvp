<p id="notice"><%= notice %></p>

<h1>Body Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Profiles</th>
      <th>Body types</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Shirt size</th>
      <th>Pants size</th>
      <th>Shoe size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @body_measurements.each do |body_measurement| %>
      <tr>
        <td><%= body_measurement.profiles_id %></td>
        <td><%= body_measurement.body_types_id %></td>
        <td><%= body_measurement.height %></td>
        <td><%= body_measurement.weight %></td>
        <td><%= body_measurement.shirt_size %></td>
        <td><%= body_measurement.pants_size %></td>
        <td><%= body_measurement.shoe_size %></td>
        <td><%= link_to 'Show', body_measurement %></td>
        <td><%= link_to 'Edit', edit_body_measurement_path(body_measurement) %></td>
        <td><%= link_to 'Destroy', body_measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

