
<%= simple_form_for(@lifestyle) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :profiles %>
    <%= f.association :activity_levels %>
    <%= f.input :works %>
    <%= f.association :job_types %>
    <%= f.input :work_hours %>
    <%= f.input :studies %>
    <%= f.input :study_hours %>
    <%= f.association :social_activities %>
    <%= f.association :outdoor_levels %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
