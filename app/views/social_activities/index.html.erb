<p id="notice"><%= notice %></p>

<h1>Social Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @social_activities.each do |social_activity| %>
      <tr>
        <td><%= social_activity.name %></td>
        <td><%= link_to 'Show', social_activity %></td>
        <td><%= link_to 'Edit', edit_social_activity_path(social_activity) %></td>
        <td><%= link_to 'Destroy', social_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Social Activity', new_social_activity_path %>
