<div class="measurements-profile-router">
  <div class="container measurements-links">
    <div class="row">
      <%= simple_form_for(@info) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <h1><%= f.object.errors[:base].to_sentence %></h1>
        <div class="form-inputs">
          <%= f.association :profiles, as: :hidden, input_html: { value: current_spree_user.profile.id } %>
          <%= f.input :name %>
          <%= f.input :dob, label: "Date of Birth", start_year: Date.today.year - 50, end_year: Date.today.year - 10 %>
          <%= f.input :gender, collection: ['Male', 'Female']  %>
          <%= f.input :phone %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
