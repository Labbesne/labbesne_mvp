<p id="notice"><%= notice %></p>

<h1>Shirt Sizes</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shirt_sizes.each do |shirt_size| %>
      <tr>
        <td><%= shirt_size.size %></td>
        <td><%= link_to 'Show', shirt_size %></td>
        <td><%= link_to 'Edit', edit_shirt_size_path(shirt_size) %></td>
        <td><%= link_to 'Destroy', shirt_size, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shirt Size', new_shirt_size_path %>
